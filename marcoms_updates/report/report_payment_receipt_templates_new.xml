<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="marcoms_updates.report_payment_receipt_new_document">
        <t t-call="web.external_layout_boxed">
            <t t-set="o" t-value="o.with_context({'lang': lang})"/>
            <div class="page" style="font-size:15px;">
                <div>
                <span style="color:black;">Date:   <span t-field="o.payment_date" t-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/></span>
                <t t-if="o.partner_type == 'customer'">
                    <span style="margin-left:50%;color:black;">Receipt No:   <span t-field="o.name"/></span>
                </t>
                <t t-if="o.partner_type == 'supplier'">
                    <span style="margin-left:50%;color:black;">Payment No:   <span t-field="o.name"/></span>
                </t>
                    
                </div><br/>
                <t t-if="o.partner_type == 'customer'">
                <h3 class="text-center"><strong style="border-bottom: 1px solid black;">RECEIPT</strong></h3>
                </t>
                <t t-if="o.partner_type == 'supplier'">
                <h3 class="text-center"><strong style="border-bottom: 1px solid black;">PAYMENT</strong></h3>
                </t> <br/><br/>   
                <table style="width:100%:color:black;border:none;background-color:transparent;">
                    <tr>
                        <td class="text-left" style="width:30%;font-size:15px;white-space: nowrap;width: 45%;border:none;background-color:transparent;"><b><span>Received with Thanks from:</span></b></td>
                        <td class="text-left" style="width:770%;font-size:15px;width: 55%;border:none;background-color:transparent;"><span t-field="o.partner_id.name"/><br/>
                            <span>P.O.Box <span t-field="o.partner_id.zip"/>,<span t-field="o.partner_id.city"/>,<span t-field="o.partner_id.country_id.name"/></span></td>
                    </tr>
                    <tr>
                        <td class="text-left" style="width:30%;font-size:15px;white-space: nowrap;width: 45%;border:none;background-color:transparent;"><b><span>The sum of Amount AED </span></b></td>
                        <td class="text-left" style="width:70%;font-size:15px;width: 55%;border:none;background-color:transparent;"><b><span t-field="o.amount" t-options="{&quot;widget&quot;:&quot;float&quot;,&quot;precision&quot;:2}"/></b></td>
                    </tr>
                    <tr>
                        <!-- <span t-field="o.currency_id"/> -->
                        <td class="text-left" style="width:30%;font-size:15px;white-space: nowrap;width: 45%;border:none;background-color:transparent;"><b><span>Amount in Words </span></b></td>
                        <td class="text-left" style="width:70%;font-size:15px;width: 55%;border:none;background-color:transparent;"><span>Dirhams <span t-field="o.text"/> Only</span></td>
                    </tr>
                    <tr>
                        <td class="text-left" style="width:30%;font-size:15px;white-space: nowrap;width: 45%;border:none;background-color:transparent;"><b><span>Mode of Payment: </span></b></td>
                        <td class="text-left" style="width:70%;font-size:15px;width: 55%;border:none;background-color:transparent;"><span>Cheque No. <span t-field="o.cheque_reference"/></span><br/><span>Cheque Date. <span t-field="o.effective_date"/></span></td>
                        <!-- <br/><span>Bank <span t-field="o.journal_id.name"/></span>  asked to hide per mahmoud -->
                    </tr>
                    <tr>
                        <td class="text-left" style="width:30%;font-size:15px;white-space: nowrap;width: 45%;border:none;background-color:transparent;"><b><span>Remarks</span></b></td>
                        <td class="text-left" style="width:70%;font-size:15px;width: 55%;border:none;background-color:transparent;"><span t-field="o.remarks"/></td>
                    </tr>
                </table><br/><br/><br/><br/><br/>

                <b><span style="white-space: nowrap;color:black;margin-top:-20px;">Prepared by:  </span></b>
                <t t-if="o.seal == True"><img src="/marcoms_updates/static/img/ul.png" style="margin-top:-20px;width:220px; height:160px;"/></t>
