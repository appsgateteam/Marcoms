<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_payment_request_document">
    <t t-call="marcoms_updates.external_layout_boxed_pay">
        <div class="page" style="border: 1px solid black;font-size:14px;">
            <div class="oe_structure"/>
            <h2 class="text-center">PURCHASE PAYMENT REQUEST</h2>
            <br/>
            <br/>
            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th class="text-left" style="border: 1px solid black;width:10%;"><strong>Item</strong></th>
                        <th class="text-left" style="border: 1px solid black;width:15%;"><strong>LPO</strong></th>
                        <th class="text-left" style="border: 1px solid black;width:20%;"><strong>Company</strong></th>
                        <th class="text-left" style="border: 1px solid black;width:20%;"><strong>Payment Term</strong></th>
                        <th class="text-left" style="border: 1px solid black;width:15%;"><strong>Amount</strong></th>
                        <th class="text-left" style="border: 1px solid black;width:20%;"><strong>Projects</strong></th>
                    </tr>
                </thead>
                <tbody>
                        <t t-set="j" t-value="1"/>
                        <t t-foreach="docs" t-as="o">
                            
                            <tr>
                                <td class="text-center" style="border: 1px solid black;width:10%;">
                                    <span t-esc="j"/>
                                </td>
                                <td class="text-left" style="border: 1px solid black;width:15%;">
                                    <span t-field="o.lpo_num.name"/>
                                </td>
                                <td class="text-left" style="border: 1px solid black;width:20%;">
                                    <span t-field="o.company.name"/>
                                </td>
                                <td class="text-left" style="border: 1px solid black;width:20%;">
                                    <span t-field="o.payment_term.name"/>
                                </td>
                                <td class="text-center" style="border: 1px solid black;width:15%;">
                                    <span t-field="o.amount" t-options="{&quot;widget&quot;:&quot;float&quot;,&quot;precision&quot;:2}"/>
                                </td>
                                <td class="text-left" style="border: 1px solid black;width:20%;">
                                    <span><t t-if="o.project.code" >[<span t-field="o.project.code"/>]</t><span t-field="o.project.name"/></span>
                                </td>
                                
                                
                            <!-- </t> -->
                            </tr>
                            
                            <t t-set="j" t-value="j+1"/>
                        </t>
                        
                    
                    
                </tbody>
            </table>
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_payment_request">
    <t t-call="web.html_container">
            <t t-call="marcoms_updates.report_payment_request_document" />
    </t>
</template>
</odoo>
