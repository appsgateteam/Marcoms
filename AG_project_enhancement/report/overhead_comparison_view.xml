<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="n2n_overhead_estimate_combine_tree" model="ir.ui.view">
            <field name="name">N2N Overhead Combine View</field>
            <field name="model">n2n.overhead.estimate.combine.view</field>
            <field name="arch" type="xml">
                <tree string="Overhead Comparison Analysis" create="false">
                    <field name="product_id"/>
                    <field name="task_id"/>
                    <!-- <field name="project_id"/> -->
                    <field name="estimate_qty"/>
                    <field name="estimate_value"/>
                    <field name="actual_qty"/>
                    <field name="actual_value"/>
                    <field name="deviation_qty"/>
                    <field name="deviation_value"/>
                </tree>
            </field>
        </record>

        <record id="n2n_overhead_estimate_combine_pivot" model="ir.ui.view">
            <field name="name">N2N Overhead Combine Pivot</field>
            <field name="model">n2n.overhead.estimate.combine.view</field>
            <field name="arch" type="xml">
                <pivot string="Overhead Comparison Analysis">
                    <field name="estimate_qty" type="measure"/>
                    <field name="estimate_value" type="measure"/>
                    <field name="actual_qty" type="measure"/>
                    <field name="actual_value" type="measure"/>
                    <field name="deviation_qty" type="measure"/>
                    <field name="deviation_value" type="measure"/>
                </pivot>
            </field>
        </record>


