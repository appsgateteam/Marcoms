        <record id="action_n2n_overhead_estimate_combine" model="ir.actions.act_window">
            <field name="name">Overhead Estimation Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">n2n.overhead.estimate.combine.view</field>
            <field name="view_type">form</field>
